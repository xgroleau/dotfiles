bindsym $mod+8 workspace number $ws8; exec $focus_on
bindsym $mod+9 workspace number $ws9; exec $focus_on
bindsym $mod+0 workspace number $ws10; exec $focus_on
bindsym --release $mod+1 exec $focus_off
bindsym --release $mod+2 exec $focus_off
bindsym --release $mod+3 exec $focus_off
bindsym --release $mod+4 exec $focus_off
bindsym --release $mod+5 exec $focus_off
